<?xml version="1.0" encoding="utf-8"?>
<!--
    âœ¨ DIALOG PREMIUM - Verifica Email (Design "MONIO")

    Questo dialog replica lo stile premium del design Figma:
    - Background scuro zinc-900 con bordo
    - Icona gold
    - Pulsanti con gradiente gold e stile secondary

    Corrisponde a: EmailVerificationDialog component
-->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    app:cardBackgroundColor="@color/zinc_900"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:strokeColor="@color/zinc_800"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="28dp">

        <!-- ========== ICONA EMAIL ========== -->

        <!-- Container icona con background circolare gold -->
        <FrameLayout
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_icon_circle_gold">

            <!-- Icona Email -->
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_email"
                app:tint="@color/zinc_950" />
        </FrameLayout>

        <!-- ========== TITOLO ========== -->

        <TextView
            android:id="@+id/tvDialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="ðŸ“§ Verifica Email Richiesta"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <!-- ========== MESSAGGIO ========== -->

        <TextView
            android:id="@+id/tvDialogMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Abbiamo inviato un'email di verifica a:\n\nControlla la posta e clicca sul link per verificare."
            android:textColor="@color/text_secondary"
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"
            android:gravity="center" />

        <!-- ========== EMAIL BADGE ========== -->

        <TextView
            android:id="@+id/tvEmailBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:text="user@example.com"
            android:textColor="@color/gold_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/bg_badge_gold_outline"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <!-- ========== BOTTONI ========== -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp">

            <!-- Pulsante Principale - Ho verificato (gold gradient) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPrimaryAction"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:text="Ho verificato"
                android:textColor="@color/zinc_950"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-medium"
                app:backgroundTint="@null"
                android:background="@drawable/bg_gold_gradient"
                app:cornerRadius="12dp"
                app:rippleColor="@color/gold_dark"
                android:layout_marginBottom="12dp" />

            <!-- Pulsante Secondario - Ri-invia email -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSecondaryAction"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:text="Ri-invia email"
                android:textColor="@color/text_primary"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-medium"
                app:backgroundTint="@color/zinc_800"
                app:cornerRadius="12dp"
                app:strokeColor="@color/zinc_700"
                app:strokeWidth="1dp"
                app:rippleColor="@color/zinc_700"
                android:layout_marginBottom="12dp" />

            <!-- Pulsante Terziario - Logout -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTertiaryAction"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Logout"
                android:textColor="@color/text_tertiary"
                android:textSize="14sp"
                android:textAllCaps="false"
                app:backgroundTint="@android:color/transparent"
                app:cornerRadius="12dp"
                app:rippleColor="@color/zinc_800"
                app:strokeWidth="0dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>