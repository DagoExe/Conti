<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.Monio.CardView.Elevated"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dialog_margin_horizontal"
    android:layout_marginEnd="@dimen/dialog_margin_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dialog_padding">

        <!-- ========== ICONA EMAIL ========== -->

        <FrameLayout
            android:layout_width="@dimen/email_dialog_icon_circle_size"
            android:layout_height="@dimen/email_dialog_icon_circle_size"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_icon_circle_gold">

            <ImageView
                android:layout_width="@dimen/email_dialog_icon_size"
                android:layout_height="@dimen/email_dialog_icon_size"
                android:layout_gravity="center"
                android:src="@drawable/ic_email"
                app:tint="@color/zinc_950" />
        </FrameLayout>

        <!-- ========== TITOLO ========== -->

        <TextView
            android:id="@+id/tvDialogTitle"
            style="@style/TextAppearance.Monio.TitleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/spacing_lg"
            android:text="ðŸ“§ Verifica Email Richiesta" />

        <!-- ========== MESSAGGIO ========== -->

        <TextView
            android:id="@+id/tvDialogMessage"
            style="@style/TextAppearance.Monio.LabelLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            android:text="Abbiamo inviato un'email di verifica a:\n\nControlla la posta e clicca sul link per verificare."
            android:lineSpacingExtra="@dimen/spacing_xxs"
            android:gravity="center" />

        <!-- ========== EMAIL BADGE ========== -->

        <TextView
            android:id="@+id/tvEmailBadge"
            style="@style/TextAppearance.Monio.LabelMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/spacing_sm"
            android:layout_marginBottom="@dimen/spacing_xs"
            android:text="user@example.com"
            android:textColor="@color/gold_primary"
            android:background="@drawable/bg_badge_gold_outline"
            android:paddingStart="@dimen/spacing_md"
            android:paddingEnd="@dimen/spacing_md"
            android:paddingTop="@dimen/spacing_xs"
            android:paddingBottom="@dimen/spacing_xs" />

        <!-- ========== BOTTONI ========== -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/spacing_xl">

            <!-- Pulsante Principale -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPrimaryAction"
                style="@style/Widget.Monio.Button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height_large"
                android:text="Ho verificato"
                android:layout_marginBottom="@dimen/spacing_sm"
                app:backgroundTint="@null"
                android:background="@drawable/bg_gold_gradient" />

            <!-- Pulsante Secondario -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSecondaryAction"
                style="@style/Widget.Monio.Button.Outlined"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height_large"
                android:text="Ri-invia email"
                android:layout_marginBottom="@dimen/spacing_sm" />

            <!-- Pulsante Terziario -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTertiaryAction"
                style="@style/Widget.Monio.Button.Text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height_medium"
                android:text="Logout" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>