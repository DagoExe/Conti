<?xml version="1.0" encoding="utf-8"?>
<!--
    ✨ DIALOG PREMIUM - Account Creato (Design "MONIO")

    Questo dialog conferma la creazione dell'account e richiede verifica email:
    - Background scuro zinc-900 con bordo
    - Icona success verde con animazione
    - Pulsante principale gold gradient

    Corrisponde a: AccountCreatedDialog component
-->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    app:cardBackgroundColor="@color/zinc_900"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:strokeColor="@color/zinc_800"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="28dp">

        <!-- ========== ICONA SUCCESS ========== -->

        <!-- Container icona con background circolare verde -->
        <FrameLayout
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_icon_circle_success">

            <!-- Icona Checkmark -->
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_check_circle"
                app:tint="@color/white" />
        </FrameLayout>

        <!-- ========== TITOLO ========== -->

        <TextView
            android:id="@+id/tvDialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="✅ Account Creato!"
            android:textColor="@color/text_primary"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <!-- ========== SOTTOTITOLO ========== -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:text="Benvenuto su MONIO"
            android:textColor="@color/gold_primary"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium" />

        <!-- ========== MESSAGGIO ========== -->

        <TextView
            android:id="@+id/tvDialogMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Abbiamo inviato un'email di verifica a:"
            android:textColor="@color/text_secondary"
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"
            android:gravity="center" />

        <!-- ========== EMAIL BADGE ========== -->

        <TextView
            android:id="@+id/tvEmailBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:text="user@example.com"
            android:textColor="@color/gold_primary"
            android:textSize="15sp"
            android:textStyle="bold"
            android:background="@drawable/bg_badge_gold_outline"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <!-- ========== ISTRUZIONI ========== -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Controlla la tua casella di posta (anche nello spam) e clicca sul link per attivare l'account."
            android:textColor="@color/text_tertiary"
            android:textSize="14sp"
            android:lineSpacingExtra="2dp"
            android:gravity="center" />

        <!-- ========== DIVIDER ========== -->

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="20dp"
            android:background="@color/zinc_800" />

        <!-- ========== PULSANTE OK ========== -->

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOk"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:text="OK, ho capito"
            android:textColor="@color/zinc_950"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-medium"
            app:backgroundTint="@null"
            android:background="@drawable/bg_gold_gradient"
            app:cornerRadius="12dp"
            app:rippleColor="@color/gold_dark" />

    </LinearLayout>

</androidx.cardview.widget.CardView>