<?xml version="1.0" encoding="utf-8"?>
<!--
    ✨ DIALOG PREMIUM - Account Creato

    REFACTORED:
    - Dimensioni da @dimen
    - TextAppearance styles
    - Spacing unificato
    - Corner radius da theme
-->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.Monio.CardView.Elevated"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dialog_margin_horizontal"
    android:layout_marginEnd="@dimen/dialog_margin_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dialog_padding">

        <!-- ========== ICONA SUCCESS ========== -->

        <FrameLayout
            android:layout_width="@dimen/dialog_icon_circle_size"
            android:layout_height="@dimen/dialog_icon_circle_size"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_icon_circle_success">

            <ImageView
                android:layout_width="@dimen/dialog_icon_size"
                android:layout_height="@dimen/dialog_icon_size"
                android:layout_gravity="center"
                android:src="@drawable/ic_check_circle"
                app:tint="@color/white" />
        </FrameLayout>

        <!-- ========== TITOLO ========== -->

        <TextView
            android:id="@+id/tvDialogTitle"
            style="@style/TextAppearance.Monio.TitleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/spacing_lg"
            android:text="✅ Account Creato!" />

        <!-- ========== SOTTOTITOLO ========== -->

        <TextView
            style="@style/TextAppearance.Monio.BodyLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/spacing_xs"
            android:text="Benvenuto su MONIO"
            android:textColor="@color/gold_primary" />

        <!-- ========== MESSAGGIO ========== -->

        <TextView
            android:id="@+id/tvDialogMessage"
            style="@style/TextAppearance.Monio.BodyLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lg"
            android:text="Abbiamo inviato un'email di verifica a:"
            android:textColor="@color/text_secondary"
            android:lineSpacingExtra="@dimen/spacing_xxs"
            android:gravity="center" />

        <!-- ========== EMAIL BADGE ========== -->

        <TextView
            android:id="@+id/tvEmailBadge"
            style="@style/TextAppearance.Monio.LabelLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/spacing_sm"
            android:text="user@example.com"
            android:textColor="@color/gold_primary"
            android:background="@drawable/bg_badge_gold_outline"
            android:paddingStart="@dimen/spacing_md"
            android:paddingEnd="@dimen/spacing_md"
            android:paddingTop="@dimen/spacing_xs"
            android:paddingBottom="@dimen/spacing_xs" />

        <!-- ========== ISTRUZIONI ========== -->

        <TextView
            style="@style/TextAppearance.Monio.BodyMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            android:text="Controlla la tua casella di posta (anche nello spam) e clicca sul link per attivare l'account."
            android:lineSpacingExtra="@dimen/spacing_xxxs"
            android:gravity="center" />

        <!-- ========== DIVIDER ========== -->

        <View
            style="@style/Widget.Monio.Divider"
            android:layout_marginTop="@dimen/spacing_xl"
            android:layout_marginBottom="@dimen/spacing_lg" />

        <!-- ========== PULSANTE OK ========== -->

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOk"
            style="@style/Widget.Monio.Button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height_large"
            android:text="OK, ho capito"
            app:backgroundTint="@null"
            android:background="@drawable/bg_gold_gradient" />

    </LinearLayout>

</androidx.cardview.widget.CardView>