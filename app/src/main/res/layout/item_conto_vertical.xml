<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.Monio.CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin"
    app:cardElevation="@dimen/elevation_md"
    app:cardCornerRadius="@dimen/corner_radius_lg"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/zinc_900">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/card_padding_large">

        <!-- Header con icona e tipo conto -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/spacing_md">

            <!-- Icona Conto -->
            <TextView
                android:id="@+id/tvIconaConto"
                android:layout_width="@dimen/icon_size_xxl"
                android:layout_height="@dimen/icon_size_xxl"
                android:text="ðŸ’³"
                android:textSize="@dimen/text_size_display_large"
                android:gravity="center"
                android:background="@color/transparent" />

            <!-- Tipo Conto e Nome -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/spacing_sm">

                <TextView
                    android:id="@+id/tvTipoConto"
                    style="@style/TextAppearance.Monio.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BuddyBank"
                    android:textColor="@color/gold_primary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvNomeConto"
                    style="@style/TextAppearance.Monio.BodyLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Conto Principale"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="@dimen/spacing_xxs" />
            </LinearLayout>
        </LinearLayout>

        <!-- Divider -->
        <View
            style="@style/Widget.Monio.Divider"
            android:background="@color/zinc_800"
            android:layout_marginBottom="@dimen/spacing_md" />

        <!-- Saldo -->
        <TextView
            style="@style/TextAppearance.Monio.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saldo Disponibile"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="@dimen/spacing_xxs" />

        <TextView
            android:id="@+id/tvSaldo"
            style="@style/TextAppearance.Monio.AmountPositive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¬ 1.234,56"
            android:textSize="@dimen/text_size_display_medium"
            android:layout_marginBottom="@dimen/spacing_md" />

        <!-- IBAN (se presente) -->
        <TextView
            android:id="@+id/tvIban"
            style="@style/TextAppearance.Monio.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IT60 X034 7901 6000 0000 0000 000"
            android:textColor="@color/text_tertiary"
            android:fontFamily="monospace"
            android:visibility="gone" />

        <!-- Ultima sincronizzazione -->
        <TextView
            android:id="@+id/tvUltimoAggiornamento"
            style="@style/TextAppearance.Monio.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aggiornato oggi alle 14:30"
            android:textColor="@color/text_disabled"
            android:layout_marginTop="@dimen/spacing_xs" />

        <!-- Divider -->
        <View
            style="@style/Widget.Monio.Divider"
            android:background="@color/zinc_800"
            android:layout_marginTop="@dimen/spacing_md"
            android:layout_marginBottom="@dimen/spacing_sm" />

        <!-- Footer con azione -->
        <TextView
            style="@style/TextAppearance.Monio.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ‘‰ Tocca per vedere i movimenti"
            android:textColor="@color/gold_primary"
            android:textStyle="bold"
            android:gravity="center" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>