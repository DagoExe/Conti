<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="16dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@android:color/white">

        <!-- Header con icona e tipo conto -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- Icona Conto -->
            <TextView
                android:id="@+id/tvIconaConto"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="ðŸ’³"
                android:textSize="32sp"
                android:gravity="center"
                android:background="@android:color/transparent" />

            <!-- Tipo Conto -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/tvTipoConto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BuddyBank"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvNomeConto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Conto Principale"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="16dp" />

        <!-- Saldo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saldo Disponibile"
            android:textSize="12sp"
            android:textColor="#757575"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvSaldo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¬ 1.234,56"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:layout_marginBottom="16dp" />

        <!-- IBAN (se presente) -->
        <TextView
            android:id="@+id/tvIban"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IT60 X034 7901 6000 0000 0000 000"
            android:textSize="11sp"
            android:textColor="#9E9E9E"
            android:fontFamily="monospace"
            android:visibility="gone" />

        <!-- Ultima sincronizzazione -->
        <TextView
            android:id="@+id/tvUltimoAggiornamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aggiornato oggi alle 14:30"
            android:textSize="10sp"
            android:textColor="#BDBDBD"
            android:layout_marginTop="8dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp" />

        <!-- Footer con azione -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ‘‰ Tocca per vedere i movimenti"
            android:textSize="12sp"
            android:textColor="#2196F3"
            android:textStyle="bold"
            android:gravity="center" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>