<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.Monio.CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/zinc_900">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/card_padding"
        android:gravity="center_vertical">

        <!-- Icona tipo movimento -->
        <TextView
            android:id="@+id/tvTipoMovimento"
            android:layout_width="@dimen/icon_size_xl"
            android:layout_height="@dimen/icon_size_xl"
            android:text="â¬‡ï¸"
            android:textSize="@dimen/text_size_display_small"
            android:gravity="center"
            android:background="@color/transparent" />

        <!-- Informazioni movimento -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/spacing_sm">

            <TextView
                android:id="@+id/tvDescrizione"
                style="@style/TextAppearance.Monio.BodyLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descrizione movimento"
                android:textColor="@color/text_primary"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvCategoria"
                style="@style/TextAppearance.Monio.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ›’ Categoria"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="@dimen/spacing_xxs" />

            <TextView
                android:id="@+id/tvData"
                style="@style/TextAppearance.Monio.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01 Gen 2025"
                android:textColor="@color/text_disabled"
                android:layout_marginTop="@dimen/spacing_xxxs" />
        </LinearLayout>

        <!-- Importo -->
        <TextView
            android:id="@+id/tvImporto"
            style="@style/TextAppearance.Monio.AmountPositive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¬ 123,45"
            android:textSize="@dimen/text_size_title_medium"
            android:layout_marginStart="@dimen/spacing_md" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>