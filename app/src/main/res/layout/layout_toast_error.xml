<?xml version="1.0" encoding="utf-8"?>
<!--
    ✨ TOAST PERSONALIZZATO - ERRORE
    
    Design premium per messaggi di errore:
    - Background rosso scuro
    - Icona X o alert
    - Testo bianco chiaro
    - Border radius 12dp
    - Elevation per profondità
    
    Usage: Mostrare feedback negativo (login fallito, errore di rete, etc.)
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_toast_error"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:gravity="center_vertical"
    android:minWidth="280dp"
    android:elevation="8dp">

    <!-- Icona Error -->
    <ImageView
        android:id="@+id/ivToastIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_error_circle"
        app:tint="@color/white"
        android:contentDescription="Error icon"
        android:layout_marginEnd="12dp" />

    <!-- Testo del messaggio -->
    <TextView
        android:id="@+id/tvToastMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Operation failed"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:fontFamily="sans-serif-medium"
        android:maxLines="3"
        android:ellipsize="end" />

</LinearLayout>
