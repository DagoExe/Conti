<?xml version="1.0" encoding="utf-8"?>
<!--
    âœ¨ TOAST PERSONALIZZATO - ERRORE
    
    REFACTORED:
    - Dimensioni da @dimen
    - Spacing standardizzato
    - TextAppearance style applicato
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_toast_error"
    android:paddingStart="@dimen/toast_padding_horizontal"
    android:paddingEnd="@dimen/toast_padding_horizontal"
    android:paddingTop="@dimen/toast_padding_vertical"
    android:paddingBottom="@dimen/toast_padding_vertical"
    android:gravity="center_vertical"
    android:minWidth="@dimen/toast_min_width"
    android:elevation="@dimen/elevation_lg">

    <!-- Icona Error -->
    <ImageView
        android:id="@+id/ivToastIcon"
        android:layout_width="@dimen/toast_icon_size"
        android:layout_height="@dimen/toast_icon_size"
        android:src="@drawable/ic_error_circle"
        app:tint="@color/white"
        android:contentDescription="@null"
        android:layout_marginEnd="@dimen/toast_icon_margin_end" />

    <!-- Testo del messaggio -->
    <TextView
        android:id="@+id/tvToastMessage"
        style="@style/TextAppearance.Monio.BodyMedium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Operation failed"
        android:textColor="@color/white"
        android:maxLines="3"
        android:ellipsize="end" />

</LinearLayout>