<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Titolo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aggiungi Nuovo Conto"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inserisci i dettagli del tuo conto bancario"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginBottom="24dp" />

        <!-- Nome Conto -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilNomeConto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome del conto"
            android:layout_marginBottom="16dp"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNomeConto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:imeOptions="actionNext" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Tipo Conto (Dropdown) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilTipoConto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tipo di conto"
            android:layout_marginBottom="16dp"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

            <AutoCompleteTextView
                android:id="@+id/actvTipoConto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:focusable="false"
                android:cursorVisible="false" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Saldo Iniziale -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilSaldoIniziale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Saldo iniziale (â‚¬)"
            android:layout_marginBottom="16dp"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            app:prefixText="â‚¬ "
            app:helperText="Inserisci il saldo attuale del conto">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSaldoIniziale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:text="0"
                android:imeOptions="actionNext" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- IBAN (Opzionale) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilIban"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="IBAN (opzionale)"
            android:layout_marginBottom="16dp"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            app:helperText="Es: IT60X0347901600000000000000">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etIban"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapCharacters"
                android:maxLines="1"
                android:imeOptions="actionDone" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Info aggiuntiva -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ’¡ Potrai modificare questi dati in qualsiasi momento"
            android:textSize="12sp"
            android:textColor="#757575"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp" />

        <!-- Pulsanti -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAnnulla"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Annulla"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSalva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salva Conto" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>