<?xml version="1.0" encoding="utf-8"?>
<!--
    âœ¨ DIALOG AGGIUNGI CONTO - Material Design 3

    REFACTORED:
    - TextAppearance styles applicati
    - Dimensioni da @dimen
    - Spacing consistente
    - Material Components style
    - Helper text ottimizzato
-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_xl">

        <!-- Titolo -->
        <TextView
            style="@style/TextAppearance.Monio.TitleLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aggiungi Nuovo Conto"
            android:textColor="@color/text_dark_primary"
            android:layout_marginBottom="@dimen/spacing_xs" />

        <!-- Sottotitolo -->
        <TextView
            style="@style/TextAppearance.Monio.BodyMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inserisci i dettagli del tuo conto bancario"
            android:textColor="@color/text_dark_secondary"
            android:layout_marginBottom="@dimen/spacing_xl" />

        <!-- Nome Conto -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilNomeConto"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome del conto"
            android:layout_marginBottom="@dimen/spacing_md">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNomeConto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:imeOptions="actionNext" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Tipo Conto (Dropdown) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilTipoConto"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tipo di conto"
            android:layout_marginBottom="@dimen/spacing_md">

            <AutoCompleteTextView
                android:id="@+id/actvTipoConto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:focusable="false"
                android:cursorVisible="false" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Saldo Iniziale -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilSaldoIniziale"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Saldo iniziale (â‚¬)"
            android:layout_marginBottom="@dimen/spacing_md"
            app:prefixText="â‚¬ "
            app:helperText="Inserisci il saldo attuale del conto"
            app:helperTextTextAppearance="@style/TextAppearance.Monio.Caption">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSaldoIniziale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:text="0"
                android:imeOptions="actionNext" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- IBAN (Opzionale) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilIban"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="IBAN (opzionale)"
            android:layout_marginBottom="@dimen/spacing_md"
            app:helperText="Es: IT60X0347901600000000000000"
            app:helperTextTextAppearance="@style/TextAppearance.Monio.Caption">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etIban"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapCharacters"
                android:maxLines="1"
                android:imeOptions="actionDone" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Info aggiuntiva -->
        <TextView
            style="@style/TextAppearance.Monio.Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ’¡ Potrai modificare questi dati in qualsiasi momento"
            android:textColor="@color/text_dark_secondary"
            android:layout_marginTop="@dimen/spacing_xs"
            android:layout_marginBottom="@dimen/spacing_xl" />

        <!-- Pulsanti -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAnnulla"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height_medium"
                android:text="Annulla"
                android:textColor="@color/text_dark_secondary"
                android:layout_marginEnd="@dimen/spacing_xs" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSalva"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height_medium"
                android:text="Salva Conto" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>