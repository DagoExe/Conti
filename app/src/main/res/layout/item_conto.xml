<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.Monio.CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_sm"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/zinc_900">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/card_padding">

        <!-- Indicatore Colore -->
        <View
            android:id="@+id/viewColore"
            android:layout_width="@dimen/spacing_xxs"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/spacing_sm"
            android:background="@color/gold_primary" />

        <!-- Informazioni Conto -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvNomeConto"
                    style="@style/TextAppearance.Monio.BodyLarge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nome Conto"
                    android:textColor="@color/text_primary" />

                <!-- Badge Excel -->
                <TextView
                    android:id="@+id/badgeExcel"
                    style="@style/Widget.Monio.Badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Excel"
                    android:background="@drawable/bg_badge_excel_dark"
                    android:textColor="@color/info_500"
                    android:layout_marginStart="@dimen/spacing_xs"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvIstituto"
                style="@style/TextAppearance.Monio.BodyMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Istituto Bancario"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="@dimen/spacing_xxs" />
        </LinearLayout>

        <!-- Saldo -->
        <TextView
            android:id="@+id/tvSaldo"
            style="@style/TextAppearance.Monio.AmountPositive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¬ 0,00"
            android:textSize="@dimen/text_size_title_medium"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/spacing_md" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>