<?xml version="1.0" encoding="utf-8"?>
<!--
    âœ¨ FRAGMENT HOME - Dashboard MONIO

    REFACTORED:
    - Card styles unificati
    - Text appearance consistente
    - Spacing standardizzato
    - Color references
--><ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/zinc_950">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_md">

        <!-- Card Riepilogo Totale -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md"
            app:cardBackgroundColor="@color/info_500"
            app:cardElevation="@dimen/elevation_md"
            app:cardCornerRadius="@dimen/corner_radius_md">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/card_padding_large">

                <TextView
                    style="@style/TextAppearance.Monio.BodyLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saldo Totale"
                    android:textColor="@color/white"
                    android:alpha="0.9" />

                <TextView
                    android:id="@+id/tvSaldoTotale"
                    style="@style/TextAppearance.Monio.HeadlineMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¬ 0,00"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/spacing_xs" />

                <TextView
                    android:id="@+id/tvNumeroConti"
                    style="@style/TextAppearance.Monio.BodyMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 conti"
                    android:textColor="@color/white"
                    android:alpha="0.8"
                    android:layout_marginTop="@dimen/spacing_xxs" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Statistiche Mese Corrente -->
        <TextView
            style="@style/TextAppearance.Monio.TitleMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Questo Mese"
            android:layout_marginBottom="@dimen/spacing_sm"
            android:textColor="@color/text_dark_primary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/spacing_md">

            <!-- Card Entrate -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.Monio.CardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/spacing_xs"
                app:cardBackgroundColor="@color/surface_white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding">

                    <TextView
                        style="@style/TextAppearance.Monio.BodyMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â¬†ï¸ Entrate"
                        android:textColor="@color/text_dark_secondary" />

                    <TextView
                        android:id="@+id/tvEntrateMese"
                        style="@style/TextAppearance.Monio.TitleLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¬ 0,00"
                        android:textColor="@color/success_500"
                        android:layout_marginTop="@dimen/spacing_xs" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card Uscite -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.Monio.CardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_xs"
                app:cardBackgroundColor="@color/surface_white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding">

                    <TextView
                        style="@style/TextAppearance.Monio.BodyMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â¬‡ï¸ Uscite"
                        android:textColor="@color/text_dark_secondary" />

                    <TextView
                        android:id="@+id/tvUsciteMese"
                        style="@style/TextAppearance.Monio.TitleLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¬ 0,00"
                        android:textColor="@color/error_500"
                        android:layout_marginTop="@dimen/spacing_xs" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Card Abbonamenti -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.Monio.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md"
            app:cardBackgroundColor="@color/surface_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/card_padding">

                <TextView
                    style="@style/TextAppearance.Monio.BodyLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“… Abbonamenti Attivi"
                    android:textColor="@color/text_dark_primary"
                    android:layout_marginBottom="@dimen/spacing_xs" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextAppearance.Monio.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Numero"
                            android:textColor="@color/text_dark_secondary" />

                        <TextView
                            android:id="@+id/tvNumeroAbbonamenti"
                            style="@style/TextAppearance.Monio.DisplaySmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/info_500" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextAppearance.Monio.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Costo Mensile"
                            android:textColor="@color/text_dark_secondary" />

                        <TextView
                            android:id="@+id/tvCostoAbbonamenti"
                            style="@style/TextAppearance.Monio.DisplaySmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â‚¬ 0,00"
                            android:textColor="@color/warning_500" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Lista Conti -->
        <TextView
            style="@style/TextAppearance.Monio.TitleMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I Tuoi Conti"
            android:layout_marginBottom="@dimen/spacing_sm"
            android:textColor="@color/text_dark_primary" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvConti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false" />

        <!-- Messaggio se non ci sono conti -->
        <LinearLayout
            android:id="@+id/layoutNoConti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/spacing_xxl"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“Š"
                android:textSize="@dimen/text_size_display_xlarge"
                android:layout_marginBottom="@dimen/spacing_md" />

            <TextView
                style="@style/TextAppearance.Monio.TitleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nessun conto configurato"
                android:textColor="@color/text_dark_primary"
                android:layout_marginBottom="@dimen/spacing_xs" />

            <TextView
                style="@style/TextAppearance.Monio.BodyMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vai alla sezione Conti per aggiungerne uno"
                android:textColor="@color/text_dark_secondary"
                android:gravity="center" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>