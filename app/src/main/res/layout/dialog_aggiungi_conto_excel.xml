<!--
    âœ¨ DIALOG AGGIUNGI CONTO EXCEL - Dropbox Integration

    REFACTORED:
    - TextAppearance styles applicati
    - Dimensioni da @dimen
    - Spacing consistente
    - Helper text migliorato
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/spacing_xl">

    <!-- Info -->
    <TextView
        style="@style/TextAppearance.Monio.BodyMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Configura un conto collegato a un file Excel di Dropbox. I movimenti verranno importati automaticamente."
        android:textColor="@color/text_dark_secondary"
        android:layout_marginBottom="@dimen/spacing_xl" />

    <!-- Nome Conto -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilNomeConto"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome del conto"
        android:layout_marginBottom="@dimen/spacing_md">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etNomeConto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Istituto -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilIstituto"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Istituto bancario"
        android:layout_marginBottom="@dimen/spacing_md">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etIstituto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Saldo Iniziale -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilSaldoIniziale"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Saldo iniziale (â‚¬)"
        android:layout_marginBottom="@dimen/spacing_md"
        app:prefixText="â‚¬ ">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etSaldoIniziale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:text="0" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Info prossimo step -->
    <TextView
        style="@style/TextAppearance.Monio.Caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ’¡ Al prossimo passaggio potrai selezionare il file Excel da importare."
        android:textColor="@color/text_dark_secondary"
        android:layout_marginTop="@dimen/spacing_xs" />

</LinearLayout>