<?xml version="1.0" encoding="utf-8"?>
<!--
    ✨ SCHERMATA REGISTRAZIONE PREMIUM - Design MONIO

    REFACTORED:
    - Dimensioni centralizzate
    - TextAppearance unificato
    - Spacing consistente
    - Corner radius unificati
-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/zinc_950"
    tools:context=".auth.RegisterActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_xl">

        <!-- Logo MONIO -->
        <TextView
            android:id="@+id/tvLogoMonio"
            style="@style/TextAppearance.Monio.HeadlineLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_marginTop="@dimen/logo_margin_top"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Sottotitolo -->
        <TextView
            android:id="@+id/tvSubtitle"
            style="@style/TextAppearance.Monio.Subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create your account"
            android:layout_marginTop="@dimen/spacing_sm"
            app:layout_constraintTop_toBottomOf="@id/tvLogoMonio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Container del form -->
        <LinearLayout
            android:id="@+id/layoutFormContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/spacing_xxxl"
            android:paddingTop="@dimen/spacing_xxl"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Input Nome Completo -->
            <TextView
                style="@style/TextAppearance.Monio.LabelMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:layout_marginBottom="@dimen/spacing_xs" />

            <EditText
                android:id="@+id/etFullName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_height"
                android:hint="John Doe"
                android:textColorHint="@color/text_tertiary"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_body_large"
                android:inputType="textPersonName|textCapWords"
                android:imeOptions="actionNext"
                android:background="@drawable/bg_input_dark"
                android:paddingStart="@dimen/input_padding_horizontal"
                android:paddingEnd="@dimen/input_padding_horizontal"
                android:layout_marginBottom="@dimen/spacing_lg" />

            <!-- Input Email -->
            <TextView
                style="@style/TextAppearance.Monio.LabelMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:layout_marginBottom="@dimen/spacing_xs" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_height"
                android:hint="you@example.com"
                android:textColorHint="@color/text_tertiary"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_body_large"
                android:inputType="textEmailAddress"
                android:imeOptions="actionNext"
                android:background="@drawable/bg_input_dark"
                android:paddingStart="@dimen/input_padding_horizontal"
                android:paddingEnd="@dimen/input_padding_horizontal"
                android:layout_marginBottom="@dimen/spacing_lg" />

            <!-- Input Password -->
            <TextView
                style="@style/TextAppearance.Monio.LabelMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:layout_marginBottom="@dimen/spacing_xs" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_height"
                android:hint="••••••••"
                android:textColorHint="@color/text_tertiary"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_body_large"
                android:inputType="textPassword"
                android:imeOptions="actionNext"
                android:background="@drawable/bg_input_dark"
                android:paddingStart="@dimen/input_padding_horizontal"
                android:paddingEnd="@dimen/input_padding_horizontal"
                android:layout_marginBottom="@dimen/spacing_lg" />

            <!-- Input Conferma Password -->
            <TextView
                style="@style/TextAppearance.Monio.LabelMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm Password"
                android:layout_marginBottom="@dimen/spacing_xs" />

            <EditText
                android:id="@+id/etConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_height"
                android:hint="••••••••"
                android:textColorHint="@color/text_tertiary"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_body_large"
                android:inputType="textPassword"
                android:imeOptions="actionDone"
                android:background="@drawable/bg_input_dark"
                android:paddingStart="@dimen/input_padding_horizontal"
                android:paddingEnd="@dimen/input_padding_horizontal"
                android:layout_marginBottom="@dimen/spacing_xl" />

            <!-- Pulsante Create Account -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCreateAccount"
                style="@style/Widget.Monio.Button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height_large"
                android:text="Create Account"
                android:layout_marginBottom="@dimen/spacing_xl"
                app:backgroundTint="@null"
                android:background="@drawable/bg_gold_gradient" />

            <!-- Link Login -->
            <TextView
                android:id="@+id/tvSignInLink"
                style="@style/TextAppearance.Monio.LabelMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account? Sign in"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:padding="@dimen/spacing_xs" />

            <!-- Privacy Policy -->
            <TextView
                android:id="@+id/tvPrivacy"
                style="@style/TextAppearance.Monio.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="By creating an account, you agree to our Terms of Service and Privacy Policy"
                android:textColor="@color/zinc_600"
                android:gravity="center"
                android:layout_marginTop="@dimen/spacing_md"
                android:layout_marginBottom="@dimen/spacing_xxl" />

        </LinearLayout>

        <!-- ProgressBar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:indeterminateTint="@color/gold_primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>