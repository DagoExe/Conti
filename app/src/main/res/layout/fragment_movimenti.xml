<!--
    âœ¨ FRAGMENT MOVIMENTI - Lista Transazioni DARK MODE

    UPDATED:
    - Background dark
    - Card statistiche dark
    - Text colors aggiornati
-->
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/zinc_950">

        <!-- Titolo sezione -->
        <TextView
            android:id="@+id/tvTitoloSezione"
            style="@style/TextAppearance.Monio.TitleLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Movimenti"
            android:textColor="@color/text_primary"
            android:padding="@dimen/spacing_md"
            android:background="@color/zinc_900"
            android:elevation="@dimen/elevation_sm" />

        <!-- Content Layout (statistiche + lista) -->
        <LinearLayout
            android:id="@+id/layoutContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Card Statistiche -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.Monio.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_md"
                app:cardBackgroundColor="@color/zinc_900">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding_large">

                    <TextView
                        style="@style/TextAppearance.Monio.BodyLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“Š Riepilogo"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="@dimen/spacing_sm" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Entrate -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                style="@style/TextAppearance.Monio.Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â¬†ï¸ Entrate"
                                android:textColor="@color/text_secondary" />

                            <TextView
                                android:id="@+id/tvTotaleEntrate"
                                style="@style/TextAppearance.Monio.AmountPositive"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â‚¬ 0,00"
                                android:textSize="@dimen/text_size_title_large"
                                android:layout_marginTop="@dimen/spacing_xxs" />
                        </LinearLayout>

                        <!-- Uscite -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                style="@style/TextAppearance.Monio.Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â¬‡ï¸ Uscite"
                                android:textColor="@color/text_secondary" />

                            <TextView
                                android:id="@+id/tvTotaleUscite"
                                style="@style/TextAppearance.Monio.AmountNegative"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â‚¬ 0,00"
                                android:textSize="@dimen/text_size_title_large"
                                android:layout_marginTop="@dimen/spacing_xxs" />
                        </LinearLayout>

                        <!-- Saldo Corrente -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                style="@style/TextAppearance.Monio.Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ’° Saldo"
                                android:textColor="@color/text_secondary" />

                            <TextView
                                android:id="@+id/tvBilancio"
                                style="@style/TextAppearance.Monio.AmountNeutral"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â‚¬ 0,00"
                                android:textSize="@dimen/text_size_title_large"
                                android:layout_marginTop="@dimen/spacing_xxs" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Nota esplicativa -->
                    <TextView
                        style="@style/TextAppearance.Monio.Caption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="â„¹ï¸ Il saldo include il saldo iniziale del conto"
                        android:textColor="@color/text_disabled"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/spacing_sm" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Lista Movimenti -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMovimenti"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/spacing_xs"
                android:clipToPadding="false" />
        </LinearLayout>

        <!-- Placeholder (quando empty o loading) -->
        <TextView
            android:id="@+id/tvPlaceholder"
            style="@style/TextAppearance.Monio.BodyLarge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="â³ Caricamento..."
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:padding="@dimen/spacing_xxxl"
            android:visibility="visible" />

    </LinearLayout>

    <!-- FAB per aggiungere movimento -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabAggiungiMovimento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:text="Aggiungi"
        android:textColor="@color/zinc_950"
        app:icon="@android:drawable/ic_input_add"
        app:iconTint="@color/zinc_950"
        app:backgroundTint="@color/gold_primary"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>