<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/zinc_900">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/zinc_950"
        android:elevation="4dp"
        app:titleTextColor="@color/text_primary"
        app:navigationIconTint="@color/gold_primary" />

    <!-- ScrollView per contenuto -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Titolo -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="✏️ Modifica Abbonamento"
                android:textSize="24sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- Nome -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilNome"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome abbonamento *"
                app:boxStrokeColor="@color/gold_primary"
                app:hintTextColor="@color/gold_primary"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords"
                    android:textColor="@color/text_primary"
                    android:background="@color/zinc_800" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Descrizione -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilDescrizione"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descrizione (opzionale)"
                app:boxStrokeColor="@color/gold_primary"
                app:hintTextColor="@color/gold_primary"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDescrizione"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences"
                    android:textColor="@color/text_primary"
                    android:background="@color/zinc_800" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Importo -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilImporto"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Importo *"
                app:boxStrokeColor="@color/gold_primary"
                app:hintTextColor="@color/gold_primary"
                app:prefixText="€ "
                app:prefixTextColor="@color/gold_primary"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etImporto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:textColor="@color/text_primary"
                    android:background="@color/zinc_800" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Frequenza -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilFrequenza"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Frequenza pagamento *"
                app:boxStrokeColor="@color/gold_primary"
                app:hintTextColor="@color/gold_primary"
                android:layout_marginBottom="16dp">

                <AutoCompleteTextView
                    android:id="@+id/etFrequenza"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:textColor="@color/text_primary"
                    android:background="@color/zinc_800" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Conto -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilConto"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Conto associato *"
                app:boxStrokeColor="@color/gold_primary"
                app:hintTextColor="@color/gold_primary"
                app:startIconDrawable="@drawable/ic_account"
                app:startIconTint="@color/gold_primary"
                android:layout_marginBottom="16dp">

                <AutoCompleteTextView
                    android:id="@+id/etConto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:textColor="@color/text_primary"
                    android:background="@color/zinc_800" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Data Prossimo Rinnovo -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilData"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Prossimo rinnovo *"
                app:boxStrokeColor="@color/gold_primary"
                app:hintTextColor="@color/gold_primary"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_calendar"
                app:endIconTint="@color/gold_primary"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="none"
                    android:textColor="@color/text_primary"
                    android:background="@color/zinc_800" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Note -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilNote"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Note aggiuntive (opzionale)"
                app:boxStrokeColor="@color/gold_primary"
                app:hintTextColor="@color/gold_primary"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:maxLines="5"
                    android:gravity="top|start"
                    android:textColor="@color/text_primary"
                    android:background="@color/zinc_800" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Switch Attivo/Inattivo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@drawable/rounded_background"
                android:backgroundTint="@color/zinc_800"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stato Abbonamento"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvStatoDescrizione"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Abbonamento attivo"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchAttivo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    app:thumbTint="@color/gold_primary"
                    app:trackTint="@color/gold_light" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Pulsanti -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/zinc_950"
        android:elevation="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAnnulla"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Annulla"
            android:textColor="@color/text_primary"
            app:strokeColor="@color/zinc_700"
            android:layout_marginEnd="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSalva"
            style="@style/Widget.Material3.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Salva Modifiche"
            android:textColor="@color/zinc_950"
            app:backgroundTint="@color/gold_primary"
            android:layout_marginStart="8dp" />
    </LinearLayout>

</LinearLayout>