<!--
    âœ¨ FRAGMENT CONTI - Lista Conti DARK MODE

    UPDATED:
    - Intestazione aggiunta
    - Tabs aggiornati: Conti / Movimenti
    - Container per MovimentiFragment
    - Fix: Colori trasparenti sicuri per tab indicator/ripple
    - Background header nero
    - Font coerenza con top bar
    - Rimosso indicatore tab
-->
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zinc_950">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
        <!-- Intestazione -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/spacing_md"
            android:paddingTop="@dimen/spacing_md"
            android:paddingBottom="@dimen/spacing_sm"
            android:background="@color/black">

            <TextView
                android:id="@+id/tvHeaderTitle"
                style="@style/TextAppearance.Monio.TitleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I miei Conti"
                android:textColor="@color/text_primary"
                android:textStyle="bold" />

            <TextView
                style="@style/TextAppearance.Monio.BodyMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gestisci i tuoi conti"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="@dimen/spacing_xxs" />
        </LinearLayout>

        <!-- Tabs per switch Conti / Movimenti -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:elevation="@dimen/elevation_sm"
            app:tabIndicatorHeight="0dp"
            app:tabIndicatorColor="@android:color/transparent"
            app:tabSelectedTextColor="@color/zinc_950"
            app:tabTextColor="@color/text_secondary"
            app:tabMode="fixed"
            app:tabRippleColor="@android:color/transparent"
            app:tabBackground="@drawable/selector_tab_background"
            app:tabTextAppearance="@style/TextAppearance.Monio.LabelMedium"
            android:layout_marginHorizontal="@dimen/spacing_md"
            android:layout_marginBottom="@dimen/spacing_sm">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Conti" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tutti i Movimenti" />
        </com.google.android.material.tabs.TabLayout>

        <!-- Container per contenuti -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Lista Conti -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvConti"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/spacing_md"
                android:clipToPadding="false" />

            <!-- Messaggio vuoto (per Conti) -->
            <LinearLayout
                android:id="@+id/layoutEmpty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="@dimen/spacing_xxxl"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’³"
                    android:textSize="@dimen/text_size_hero"
                    android:layout_marginBottom="@dimen/spacing_md" />

                <TextView
                    android:id="@+id/tvEmptyMessage"
                    style="@style/TextAppearance.Monio.TitleMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nessun conto presente"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="@dimen/spacing_xs" />

                <TextView
                    android:id="@+id/tvEmptyDescription"
                    style="@style/TextAppearance.Monio.BodyMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aggiungi un conto per iniziare"
                    android:textColor="@color/text_secondary"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Container per MovimentiFragment -->
            <FrameLayout
                android:id="@+id/containerMovimenti"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

        </FrameLayout>
    </LinearLayout>

    <!-- Pulsante per aggiungere conto (Custom FAB con gradiente) -->
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/fabAggiungi"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:background="@drawable/bg_gold_gradient"
        android:contentDescription="Aggiungi Conto"
        android:elevation="6dp"
        android:padding="16dp"
        android:scaleType="fitCenter"
        app:srcCompat="@android:drawable/ic_input_add"
        app:tint="@color/zinc_950" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>