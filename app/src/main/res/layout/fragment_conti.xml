<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zinc_950">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Tabs per Conti Excel / Manuali -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/zinc_900"
            android:elevation="@dimen/elevation_sm"
            app:tabIndicatorColor="@color/gold_primary"
            app:tabSelectedTextColor="@color/gold_primary"
            app:tabTextColor="@color/text_secondary"
            app:tabMode="fixed"
            app:tabTextAppearance="@style/TextAppearance.Monio.LabelMedium">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“Š Da Excel" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âœï¸ Manuali" />
        </com.google.android.material.tabs.TabLayout>

        <!-- Lista Conti -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvConti"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/spacing_md"
            android:clipToPadding="false" />

        <!-- Messaggio vuoto -->
        <LinearLayout
            android:id="@+id/layoutEmpty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/spacing_xxxl"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’³"
                android:textSize="@dimen/text_size_hero"
                android:layout_marginBottom="@dimen/spacing_md" />

            <TextView
                android:id="@+id/tvEmptyMessage"
                style="@style/TextAppearance.Monio.TitleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nessun conto presente"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="@dimen/spacing_xs" />

            <TextView
                android:id="@+id/tvEmptyDescription"
                style="@style/TextAppearance.Monio.BodyMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aggiungi un conto per iniziare"
                android:textColor="@color/text_secondary"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

    <!-- Floating Action Button per aggiungere conto -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabAggiungi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:text="Aggiungi Conto"
        android:textColor="@color/zinc_950"
        app:icon="@android:drawable/ic_input_add"
        app:iconTint="@color/zinc_950"
        app:backgroundTint="@color/gold_primary" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>