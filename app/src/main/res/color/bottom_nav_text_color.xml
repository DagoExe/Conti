<?xml version="1.0" encoding="utf-8"?>
<!--
    Color selector per Bottom Navigation Text
    - Selezionato: Oro
    - Non selezionato: Grigio
-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Stato selezionato - Oro -->
    <item android:color="@color/gold_primary" android:state_checked="true" />
    <item android:color="@color/gold_primary" android:state_selected="true" />

    <!-- Stato normale - Grigio -->
    <item android:color="@color/zinc_500" />
</selector>