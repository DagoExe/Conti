<?xml version="1.0" encoding="utf-8"?>
<!-- Background circolare con gradiente gold per icone -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <gradient
        android:angle="135"
        android:startColor="@color/gold_light"
        android:centerColor="@color/gold_primary"
        android:endColor="@color/gold_dark"
        android:type="linear" />

    <size
        android:width="64dp"
        android:height="64dp" />

</shape>