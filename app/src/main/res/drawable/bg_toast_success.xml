<?xml version="1.0" encoding="utf-8"?>
<!--
    Background per Toast di Successo
    
    Design:
    - Colore verde emerald (600) con leggera trasparenza
    - Corner radius 12dp
    - Solid fill
-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- Colore di sfondo verde emerald -->
    <solid android:color="@color/emerald_600" />
    
    <!-- Corner radius arrotondati -->
    <corners android:radius="12dp" />
    
</shape>
