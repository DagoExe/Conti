<?xml version="1.0" encoding="utf-8"?>
<!--
    ✨ POPUP MENU BACKGROUND - Dark Theme

    Background per dropdown menu, autocomplete, spinner
    - Colore zinc_900
    - Border zinc_800
    - Corner radius medium
    - Elevation per profondità
-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background scuro -->
    <solid android:color="@color/zinc_900" />

    <!-- Border sottile -->
    <stroke
        android:width="@dimen/stroke_width_thin"
        android:color="@color/zinc_800" />

    <!-- Corner arrotondati -->
    <corners android:radius="@dimen/corner_radius_sm" />

    <!-- Padding interno -->
    <padding
        android:left="@dimen/spacing_xxs"
        android:top="@dimen/spacing_xxs"
        android:right="@dimen/spacing_xxs"
        android:bottom="@dimen/spacing_xxs" />

</shape>