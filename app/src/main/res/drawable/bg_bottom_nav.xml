<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Border color (visible at top) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/zinc_800" />
        </shape>
    </item>
    <!-- Background color (offset by 1dp at top) -->
    <item android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/zinc_950" />
        </shape>
    </item>
</layer-list>