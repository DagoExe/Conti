<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item android:gravity="center">
                <shape android:shape="rectangle">
                    <size android:width="@dimen/bottom_nav_indicator_width" android:height="@dimen/bottom_nav_indicator_height"/>
                    <corners android:radius="@dimen/corner_radius_sm"/>
                    <gradient
                        android:angle="135"
                        android:startColor="@color/gold_light"
                        android:centerColor="@color/gold_primary"
                        android:endColor="@color/gold_dark"
                        android:type="linear" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:drawable="@android:color/transparent" />
</selector>