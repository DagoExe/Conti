<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- ===== TEMA BASE - MONIO PREMIUM ===== -->
    <style name="Base.Theme.Conti" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- ========== COLORI PRIMARI ========== -->
        <item name="colorPrimary">@color/gold_primary</item>
        <item name="colorPrimaryVariant">@color/gold_dark</item>
        <item name="colorOnPrimary">@color/zinc_950</item>

        <!-- ========== COLORI SECONDARI ========== -->
        <item name="colorSecondary">@color/emerald_500</item>
        <item name="colorSecondaryVariant">@color/emerald_600</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- ========== BACKGROUND ========== -->
        <item name="android:colorBackground">@color/zinc_950</item>
        <item name="colorOnBackground">@color/text_primary</item>

        <!-- ========== SUPERFICIE (Card, Dialog, etc.) ========== -->
        <item name="colorSurface">@color/zinc_900</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/zinc_800</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>

        <!-- ========== ERRORI ========== -->
        <item name="colorError">@color/red_500</item>
        <item name="colorOnError">@color/white</item>

        <!-- ========== STATUS BAR & NAVIGATION BAR ========== -->
        <item name="android:statusBarColor">@color/zinc_950</item>
        <item name="android:navigationBarColor">@color/zinc_950</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>

        <!-- ========== WINDOW BACKGROUND ========== -->
        <item name="android:windowBackground">@color/zinc_950</item>

        <!-- ========== TEXT APPEARANCE ========== -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorTertiary">@color/text_tertiary</item>

    </style>

    <!-- Tema applicato all'app -->
    <style name="Theme.Conti" parent="Base.Theme.Conti" />

    <!-- ========== STILI COMPONENTI PERSONALIZZATI ========== -->

    <!-- Pulsante Premium con gradiente gold -->
    <style name="Widget.Monio.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/zinc_950</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="iconTint">@color/zinc_950</item>
        <item name="rippleColor">@color/gold_dark</item>
    </style>

    <!-- Pulsante Outlined -->
    <style name="Widget.Monio.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="cornerRadius">12dp</item>
        <item name="strokeColor">@color/zinc_700</item>
        <item name="strokeWidth">1dp</item>
        <item name="backgroundTint">@color/zinc_800</item>
        <item name="rippleColor">@color/zinc_700</item>
    </style>

    <!-- Card Premium -->
    <style name="Widget.Monio.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/zinc_900</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="strokeColor">@color/zinc_800</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Bottom Navigation Premium - Stile Figma -->
    <style name="Widget.Monio.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">@color/zinc_950</item>
        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="itemTextColor">@color/bottom_nav_text_color</item>
        <item name="itemIconSize">24dp</item>
        <item name="itemPaddingTop">8dp</item>
        <item name="itemPaddingBottom">8dp</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemActiveIndicatorStyle">@style/Widget.Monio.BottomNavigationView.ActiveIndicator</item>
        <item name="elevation">8dp</item>
    </style>

    <!-- Indicatore Attivo con Background Oro -->
    <style name="Widget.Monio.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/gold_primary</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Monio.BottomNav.ActiveIndicator</item>
        <item name="android:width">56dp</item>
        <item name="android:height">32dp</item>
        <item name="marginHorizontal">0dp</item>
    </style>

    <!-- Forma dell'Indicatore Attivo -->
    <style name="ShapeAppearance.Monio.BottomNav.ActiveIndicator" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Toolbar Premium -->
    <style name="Widget.Monio.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextColor">@color/gold_primary</item>
        <item name="subtitleTextColor">@color/text_secondary</item>
        <item name="android:background">@color/zinc_900</item>
        <item name="android:elevation">4dp</item>
    </style>

</resources>