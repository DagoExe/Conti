<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- ===== TEMA BASE - MONIO PREMIUM ===== -->
    <style name="Base.Theme.Conti" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- ========== COLORI PRIMARI ========== -->
        <item name="colorPrimary">@color/gold_primary</item>
        <item name="colorPrimaryVariant">@color/gold_dark</item>
        <item name="colorOnPrimary">@color/zinc_950</item>

        <!-- ========== COLORI SECONDARI ========== -->
        <item name="colorSecondary">@color/emerald_500</item>
        <item name="colorSecondaryVariant">@color/emerald_600</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- ========== BACKGROUND ========== -->
        <item name="android:colorBackground">@color/zinc_950</item>
        <item name="colorOnBackground">@color/text_primary</item>

        <!-- ========== SUPERFICIE (Card, Dialog, etc.) ========== -->
        <item name="colorSurface">@color/zinc_900</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/zinc_800</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>

        <!-- ========== ERRORI ========== -->
        <item name="colorError">@color/red_500</item>
        <item name="colorOnError">@color/white</item>

        <!-- ========== STATUS BAR & NAVIGATION BAR ========== -->
        <item name="android:statusBarColor">@color/zinc_950</item>
        <item name="android:navigationBarColor">@color/zinc_950</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>

        <!-- ========== WINDOW BACKGROUND ========== -->
        <item name="android:windowBackground">@color/zinc_950</item>

        <!-- ========== TEXT APPEARANCE ========== -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorTertiary">@color/text_tertiary</item>

        <!-- ========== TEXT APPEARANCE REFERENCES ========== -->
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.Monio.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.Monio.HeadlineMedium</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.Monio.HeadlineSmall</item>
        <item name="textAppearanceTitleLarge">@style/TextAppearance.Monio.TitleLarge</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.Monio.TitleMedium</item>
        <item name="textAppearanceTitleSmall">@style/TextAppearance.Monio.TitleSmall</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.Monio.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.Monio.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.Monio.BodySmall</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.Monio.LabelLarge</item>
        <item name="textAppearanceLabelMedium">@style/TextAppearance.Monio.LabelMedium</item>
        <item name="textAppearanceLabelSmall">@style/TextAppearance.Monio.LabelSmall</item>

        <!-- ========== MENU & DROPDOWN ========== -->
        <item name="popupMenuStyle">@style/Widget.Monio.PopupMenu</item>
        <item name="listPopupWindowStyle">@style/Widget.Monio.ListPopupWindow</item>
        <item name="autoCompleteTextViewStyle">@style/Widget.Monio.AutoCompleteTextView</item>
        <item name="dropDownListViewStyle">@style/Widget.Monio.ListView.DropDown</item>

        <!-- Text appearance per menu items -->
        <item name="textAppearanceLargePopupMenu">@style/TextAppearance.Monio.Menu</item>
        <item name="textAppearanceSmallPopupMenu">@style/TextAppearance.Monio.Menu</item>

    </style>

    <!-- Tema applicato all'app -->
    <style name="Theme.Conti" parent="Base.Theme.Conti" />

    <!-- ========== WIDGET BASE MONIO ========== -->
    <!-- ⚠️ CRITICAL: Style base per tutti i Widget.Monio.* -->
    <style name="Widget.Monio" parent="" />

    <!-- ========== TEXT APPEARANCE STYLES ========== -->

    <!-- Display Text (per numeri grandi, statistiche) -->
    <style name="TextAppearance.Monio.DisplaySmall" parent="TextAppearance.Material3.DisplaySmall">
        <item name="android:textSize">@dimen/text_size_display_small</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Monio.DisplayMedium" parent="TextAppearance.Material3.DisplayMedium">
        <item name="android:textSize">@dimen/text_size_display_medium</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Monio.DisplayLarge" parent="TextAppearance.Material3.DisplayLarge">
        <item name="android:textSize">@dimen/text_size_display_large</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Headline / Display Text (Hero, Logo, etc.) -->
    <style name="TextAppearance.Monio.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">@dimen/text_size_display_xlarge</item>
        <item name="android:textColor">@color/gold_primary</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="TextAppearance.Monio.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">@dimen/text_size_display_large</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Monio.HeadlineSmall" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textSize">@dimen/text_size_display_medium</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Title Text -->
    <style name="TextAppearance.Monio.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">@dimen/text_size_title_xlarge</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Monio.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">@dimen/text_size_title_large</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Monio.TitleSmall" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textSize">@dimen/text_size_title_medium</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Body Text -->
    <style name="TextAppearance.Monio.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">@dimen/text_size_body_large</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.Monio.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">@dimen/text_size_body_medium</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.Monio.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">@dimen/text_size_body_small</item>
        <item name="android:textColor">@color/text_tertiary</item>
    </style>

    <!-- Label Text -->
    <style name="TextAppearance.Monio.LabelLarge" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">@dimen/text_size_title_small</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Monio.LabelMedium" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textSize">@dimen/text_size_body_medium</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.Monio.LabelSmall" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">@dimen/text_size_body_small</item>
        <item name="android:textColor">@color/text_tertiary</item>
    </style>

    <!-- Caption Text -->
    <style name="TextAppearance.Monio.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">@dimen/text_size_caption</item>
        <item name="android:textColor">@color/text_tertiary</item>
    </style>

    <!-- Subtitle (sotto logo, etc.) -->
    <style name="TextAppearance.Monio.Subtitle" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">@dimen/text_size_body_medium</item>
        <item name="android:textColor">@color/text_tertiary</item>
    </style>

    <!-- ========== COMPONENT STYLES ========== -->

    <!-- Button Premium con gradiente gold -->
    <style name="Widget.Monio.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/zinc_950</item>
        <item name="android:textSize">@dimen/text_size_body_large</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">@dimen/corner_radius_md</item>
        <item name="android:minHeight">@dimen/button_height_large</item>
        <item name="iconTint">@color/zinc_950</item>
        <item name="rippleColor">@color/gold_dark</item>
    </style>

    <!-- Pulsante Outlined -->
    <style name="Widget.Monio.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_size_title_small</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="cornerRadius">@dimen/corner_radius_md</item>
        <item name="strokeColor">@color/zinc_700</item>
        <item name="strokeWidth">@dimen/stroke_width_thin</item>
        <item name="backgroundTint">@color/zinc_800</item>
        <item name="rippleColor">@color/zinc_700</item>
        <item name="android:minHeight">@dimen/button_height_large</item>
    </style>

    <!-- Pulsante Terziario / Text Button -->
    <style name="Widget.Monio.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/text_tertiary</item>
        <item name="android:textSize">@dimen/text_size_body_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="cornerRadius">@dimen/corner_radius_md</item>
        <item name="rippleColor">@color/zinc_800</item>
        <item name="android:minHeight">@dimen/button_height_medium</item>
    </style>

    <!-- Card Premium -->
    <style name="Widget.Monio.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/zinc_900</item>
        <item name="cardCornerRadius">@dimen/corner_radius_md</item>
        <item name="cardElevation">@dimen/elevation_sm</item>
        <item name="strokeColor">@color/zinc_800</item>
        <item name="strokeWidth">@dimen/stroke_width_thin</item>
    </style>

    <!-- Card con elevation maggiore (dialog, etc.) -->
    <style name="Widget.Monio.CardView.Elevated" parent="Widget.Monio.CardView">
        <item name="cardElevation">@dimen/elevation_md</item>
        <item name="cardCornerRadius">@dimen/corner_radius_lg</item>
    </style>

    <!-- Card senza bordo -->
    <style name="Widget.Monio.CardView.NoBorder" parent="Widget.Monio.CardView">
        <item name="strokeWidth">0dp</item>
    </style>

    <!-- Bottom Navigation Premium - Stile Figma -->
    <style name="Widget.Monio.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@drawable/bg_bottom_nav</item>
        <item name="backgroundTint">@null</item>
        
        <!-- DISABILITO IL TINT AUTOMATICO PER USARE I COLORI DEI VETTORI -->
        <item name="itemIconTint">@null</item>
        
        <item name="itemTextColor">@color/bottom_nav_text_color</item>
        <item name="itemIconSize">@dimen/bottom_nav_icon_size</item>
        <item name="itemPaddingTop">@dimen/bottom_nav_padding_vertical</item>
        <item name="itemPaddingBottom">@dimen/bottom_nav_padding_vertical</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="itemActiveIndicatorStyle">@style/Widget.Monio.BottomNavigationView.ActiveIndicator</item>
        <item name="elevation">@dimen/elevation_lg</item>
    </style>

    <!-- Indicatore Attivo con Background Oro -->
    <style name="Widget.Monio.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@android:color/transparent</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Monio.BottomNav.ActiveIndicator</item>
        <item name="android:width">@dimen/bottom_nav_indicator_height</item>
        <item name="android:height">@dimen/bottom_nav_indicator_height</item>
        <item name="marginHorizontal">0dp</item>
    </style>

    <!-- Forma dell'Indicatore Attivo -->
    <style name="ShapeAppearance.Monio.BottomNav.ActiveIndicator" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_radius_sm</item>
    </style>

    <!-- Toolbar Premium -->
    <style name="Widget.Monio.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.Monio.ToolbarTitle</item>
        <item name="subtitleTextColor">@color/text_secondary</item>
        <item name="android:background">@drawable/bg_toolbar</item>
        <item name="android:elevation">@dimen/elevation_md</item>
    </style>

    <!-- Toolbar Title Appearance -->
    <style name="TextAppearance.Monio.ToolbarTitle" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/gold_primary</item>
        <item name="fontFamily">serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <!-- TextInputLayout Style -->
    <style name="Widget.Monio.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/zinc_800</item>
        <item name="boxStrokeWidth">@dimen/stroke_width_thin</item>
        <item name="android:textColorHint">@color/text_tertiary</item>
        <item name="hintTextColor">@color/text_secondary</item>
    </style>

    <!-- Divider Style -->
    <style name="Widget.Monio.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:background">@color/zinc_800</item>
    </style>

    <!-- Badge Style (Excel, etc.) -->
    <style name="Widget.Monio.Badge">
        <item name="android:textSize">@dimen/text_size_micro</item>
        <item name="android:paddingStart">@dimen/spacing_xs</item>
        <item name="android:paddingEnd">@dimen/spacing_xs</item>
        <item name="android:paddingTop">@dimen/spacing_xxxs</item>
        <item name="android:paddingBottom">@dimen/spacing_xxxs</item>
    </style>

    <!-- Amount Text Styles (positive/negative) -->
    <style name="TextAppearance.Monio.AmountPositive" parent="TextAppearance.Monio.BodyLarge">
        <item name="android:textColor">@color/success_500</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Monio.AmountNegative" parent="TextAppearance.Monio.BodyLarge">
        <item name="android:textColor">@color/error_500</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Monio.AmountNeutral" parent="TextAppearance.Monio.BodyLarge">
        <item name="android:textColor">@color/info_500</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- ========== MENU & DROPDOWN STYLES ========== -->

    <!-- Popup Menu Style (per dropdown, context menu, etc.) -->
    <style name="Widget.Monio.PopupMenu" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@drawable/bg_popup_menu_dark</item>
        <item name="android:popupElevation">@dimen/elevation_lg</item>
    </style>

    <style name="Widget.Monio.ListPopupWindow" parent="">
        <item name="android:popupBackground">@drawable/bg_popup_menu_dark</item>
        <item name="android:dropDownVerticalOffset">@dimen/spacing_xxs</item>
        <item name="android:dropDownHorizontalOffset">0dp</item>
    </style>

    <!-- AutoCompleteTextView Style -->
    <style name="Widget.Monio.AutoCompleteTextView" parent="Widget.Material3.AutoCompleteTextView.OutlinedBox">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_tertiary</item>
        <item name="android:popupBackground">@drawable/bg_popup_menu_dark</item>
        <item name="android:dropDownSelector">@drawable/selector_menu_item_dark</item>
    </style>

    <!-- Menu Item Text Appearance -->
    <style name="TextAppearance.Monio.Menu" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">@dimen/text_size_body_large</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Spinner Style (se usato) -->
    <style name="Widget.Monio.Spinner" parent="Widget.Material3.CompoundButton.Switch">
        <item name="android:background">@drawable/bg_popup_menu_dark</item>
        <item name="android:popupBackground">@drawable/bg_popup_menu_dark</item>
        <item name="android:dropDownSelector">@drawable/selector_menu_item_dark</item>
    </style>

    <style name="Widget.Monio.ListView.DropDown" parent="android:Widget">
        <item name="android:background">@color/zinc_900</item>
        <item name="android:divider">@color/zinc_800</item>
        <item name="android:dividerHeight">@dimen/divider_height</item>
        <item name="android:listSelector">@drawable/selector_menu_item_dark</item>
    </style>

    <!-- ========== THEME OVERLAYS ========== -->

    <!-- Theme Overlay per Popup Menu (menu overflow toolbar) -->
    <style name="ThemeOverlay.Monio.PopupMenu" parent="ThemeOverlay.Material3.Dark">
        <item name="android:colorBackground">@color/zinc_900</item>
        <item name="colorSurface">@color/zinc_900</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="popupMenuBackground">@drawable/bg_popup_menu_dark</item>
        <item name="actionOverflowMenuStyle">@style/Widget.Monio.PopupMenu.Overflow</item>
    </style>

    <!-- Stile per il menu overflow -->
    <style name="Widget.Monio.PopupMenu.Overflow" parent="Widget.Material3.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/bg_popup_menu_dark</item>
        <item name="android:popupElevation">@dimen/elevation_lg</item>
        <item name="android:dropDownVerticalOffset">@dimen/spacing_xxs</item>
    </style>
</resources>